---
import { Icon } from 'astro-icon/components';

import Logo from '@assets/logos/logo-dual-theme.svg';
import Header from '@components/ui/Header.astro';
import ThemeToggle from '@components/ui/ThemeToggle.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout
  backgroundClass="bg-abbey-50 dark:bg-dark-primary blog-root"
  metadata={{
    title: 'Blog | Benjamin Matthews',
    description:
      'My little slice of the interwebs where I talk about my current ADHD obsession (or something like that...)',
    site: Astro.request.url,
  }}
>
  <Header />

  <main class="mx-auto mt-6 max-w-7xl px-4 sm:mt-12 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl">
      <h1 class="title">Blog (of sorts)</h1>

      <h2 class="subtitle">
        Reflections, ruminations, and even some remonstrations about the current
        shiny thing with which I am obsessed
      </h2>
    </div>
  </main>

  <footer></footer>
</BaseLayout>

---
import Footer from '@components/ui/Footer.astro';
import Header from '@components/ui/Header.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout>
  <div class="flex min-h-full flex-col">
    <Header />

    <main
      class="mx-auto flex w-full max-w-7xl flex-auto flex-col justify-center px-6 py-24 sm:py-64 lg:px-8"
    >
      <p class="text-primary text-base/8 font-semibold">404</p>
      <h1
        class="mt-4 text-5xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-6xl dark:text-slate-50"
      >
        Page not found
      </h1>
      <p
        class="mt-6 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8 dark:text-slate-200"
      >
        Sorry, we couldn’t find the page you’re looking for.
      </p>
      <div class="mt-10">
        <a
          href={Astro.site}
          class="text-primary text-sm/7 font-semibold"
          ><span aria-hidden="true">&larr;</span> Back to home</a
        >
      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>

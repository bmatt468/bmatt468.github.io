---
import LandingGsap from '../components/landing/LandingGsap.astro';
import LandingGsapBox from '../components/landing/LandingGsapBox.astro';
import LandingProgressBar from '../components/landing/LandingProgressBar.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <LandingGsap />
  <div
    class="fixed -z-50 h-screen w-full"
    id="landing-background"
  >
  </div>
  <div id="smooth-wrapper">
    <div id="smooth-content">
      <LandingGsapBox id="gsapBoxHero">
        <div class="text-center">
          <h1
            id="hero-title"
            class="invisible text-5xl font-semibold tracking-tight text-gray-900 sm:text-7xl"
          >
            Hello, I'm Benjamin!
          </h1>
          <p
            id="hero-subtitle"
            class="invisible my-4 text-xl font-medium tracking-widest text-pretty text-gray-500 uppercase sm:text-3xl"
          >
            Full-stack engineer &amp; engineering leader
          </p>
          <LandingProgressBar />
        </div>
      </LandingGsapBox>

      <LandingGsapBox id="gsapBoxResume">
        <div class="text-center">
          <h1
            class="text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl"
          >
            Resume
          </h1>
          <p
            class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8"
          >
            Subtext
          </p>
        </div>
      </LandingGsapBox>

      <LandingGsapBox id="gsapBoxAbout">
        <div class="text-center">
          <h1
            class="text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl"
          >
            About
          </h1>
          <p
            class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8"
          >
            Subtext
          </p>
        </div>
      </LandingGsapBox>

      <LandingGsapBox id="gsapBoxSkills">
        <div class="text-center">
          <h1
            class="text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl"
          >
            Skills
          </h1>
          <p
            class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8"
          >
            Subtext
          </p>
        </div>
      </LandingGsapBox>

      <LandingGsapBox id="gsapBoxExperience">
        <div class="text-center">
          <h1
            class="text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl"
          >
            Experience
          </h1>
          <p
            class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8"
          >
            Subtext
          </p>
        </div>
      </LandingGsapBox>

      <LandingGsapBox id="gsapBoxProjects">
        <div class="text-center">
          <h1
            class="text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl"
          >
            Projects
          </h1>
          <p
            class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8"
          >
            Subtext
          </p>
        </div>
      </LandingGsapBox>

      <LandingGsapBox id="gsapBoxContact">
        <div class="text-center">
          <h1
            class="text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl"
          >
            Contact
          </h1>
          <p
            class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8"
          >
            Subtext
          </p>
        </div>
      </LandingGsapBox>
    </div>
  </div>
</BaseLayout>

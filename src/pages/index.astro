---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';

import LandingFooter from '@components/landing/LandingFooter.astro';
import LandingGsapBox from '@components/landing/LandingGsapBox.astro';
import LandingHero from '@components/landing/LandingHero.astro';
import GsapSmoothScroll from '@components/ui/GsapSmoothScroll.astro';
import Space1 from '@images/space/space1.jpg';
import LandingLayout from '@layouts/LandingLayout.astro';
---

<LandingLayout>
  <div id="landing-background"></div>

  <GsapSmoothScroll>
    <div
      class="absolute top-0 -z-40 h-[120svh] w-full overflow-hidden"
      data-speed="clamp(.1)"
    >
      <Image
        src={Space1}
        alt=""
        class="h-full w-full max-w-none object-cover object-bottom"
        decoding="sync"
        loading="eager"
      />
    </div>

    <LandingHero />

    <LandingGsapBox
      id="gsapBoxResume"
      linkId="resume"
      classes="bg-dark-primary py-[4rem] box-content"
    >
      <div class="text-center">
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          Resume
        </h1>
        <a
          href={new URL('assets/resume-2025.pdf', Astro.site)}
          target="_blank"
          class="text-secondary hover:text-secondary-light my-4 text-xl font-medium tracking-widest text-pretty uppercase underline sm:text-3xl"
        >
          Yours for the keeping!
        </a>
      </div>
    </LandingGsapBox>

    <LandingGsapBox
      id="gsapBoxAbout"
      linkId="about"
      classes=""
    >
      <div class="text-center">
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          About
        </h1>
        <p
          class="text-secondary my-4 text-xl font-medium tracking-widest text-pretty uppercase sm:text-3xl"
        >
          I'm going to talk about me here
        </p>
      </div>
    </LandingGsapBox>

    <LandingGsapBox
      id="gsapBoxSkills"
      linkId="skills"
      classes=""
    >
      <div class="text-center">
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          Skills
        </h1>
        <p
          class="text-secondary my-4 text-xl font-medium tracking-widest text-pretty uppercase sm:text-3xl"
        >
          I'm going to talk about what I know here
        </p>
      </div>
    </LandingGsapBox>

    <LandingGsapBox
      id="gsapBoxExperience"
      linkId="experience"
      classes="bg-dark-primary py-[4rem] box-content"
    >
      <div class="text-center">
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          Experience
        </h1>
        <p
          class="text-secondary my-4 text-xl font-medium tracking-widest text-pretty uppercase sm:text-3xl"
        >
          I'm going to talk about what I've done here
        </p>
      </div>
    </LandingGsapBox>

    <LandingGsapBox
      id="gsapBoxProjects"
      linkId="projects"
      classes="bg-dark-primary py-[4rem] box-content"
    >
      <div class="text-center">
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          Projects
        </h1>
        <p
          class="text-secondary my-4 text-xl font-medium tracking-widest text-pretty uppercase sm:text-3xl"
        >
          I'm going to talk more about what I've done here
        </p>
      </div>
    </LandingGsapBox>

    <LandingGsapBox
      id="gsapBoxContact"
      linkId="contact"
      classes="bg-red-400 h-[110svh]"
    >
      <div
        class="bg-dark-secondary shadow-dark-secondary w-[95%] max-w-[650px] rounded-2xl p-4 text-center shadow-md sm:rounded-4xl sm:p-8 md:px-[4rem]"
      >
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          Contact
        </h1>
        <p
          class="text-secondary my-4 text-xl font-medium tracking-widest text-pretty uppercase sm:text-3xl"
        >
          Don't be a stranger!
        </p>

        <p class="prose text-primary my-4 text-center text-balance">
          Want to learn more about me? Chat about which coffee is best?<br
            class="hidden sm:block"
          />
          (And why the answer to that question is definitively Ethiopian?)<br
            class="hidden sm:block"
          />
          Feel free to reach out!
        </p>

        <p class="prose text-primary my-4 text-center text-balance">
          You can reach me on <a
            href="https://www.linkedin.com/in/benjaminrmatthews/"
            target="_blank"
            class="text-primary hover:text-secondary"
            >LinkedIn</a
          >, check out my <a
            href="https://github.com/bmatt468"
            target="_blank"
            class="text-primary hover:text-secondary"
            >GitHub</a
          >
          (including the <a
            href="https://github.com/bmatt468/bmatt468.github.io"
            target="_blank"
            class="text-primary hover:text-secondary"
            >source</a
          > for this site ðŸ˜„), or email me directly at <code
            class="text-abbey-light">me@bmatt468.com</code
          >
        </p>

        <p
          class="text-secondary mt-8 text-center text-lg font-light tracking-wide text-balance"
        >
          Need an extra set of hands? Check out my consulting business, <a
            href="https://www.highiron.co?utm_source=portfolio&utm_content=landingcontact"
            target="_blank"
            class="text-primary hover:text-secondary"
            >High Iron</a
          >!
        </p>
      </div>
    </LandingGsapBox>

    <LandingFooter />
  </GsapSmoothScroll>
</LandingLayout>

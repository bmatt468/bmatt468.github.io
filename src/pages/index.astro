---
import { Image } from 'astro:assets';

import LandingContact from '@components/landing/LandingContact.astro';
import LandingFooter from '@components/landing/LandingFooter.astro';
import LandingGsapBox from '@components/landing/LandingGsapBox.astro';
import LandingHero from '@components/landing/LandingHero.astro';
import GsapSmoothScroll from '@components/ui/GsapSmoothScroll.astro';
import Space1 from '@images/space/space1.jpg';
import Space2 from '@images/space/space2.jpg';
import LandingLayout from '@layouts/LandingLayout.astro';
---

<LandingLayout>
  <div id="landing-background"></div>

  <GsapSmoothScroll>
    <div
      class="absolute top-0 -z-40 h-[120svh] w-full overflow-hidden"
      data-speed="clamp(.1)"
    >
      <Image
        src={Space1}
        alt=""
        class="h-full w-full max-w-none object-cover object-bottom"
        decoding="sync"
        loading="eager"
      />
    </div>

    <LandingHero />

    <div
      class="bg-dark-primary flex h-[50svh] items-center justify-center overflow-hidden p-2"
    >
      <div class="text-center">
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          ðŸš§ Coming soon! ðŸš§
        </h1>
        <p
          class="text-secondary my-4 text-xl font-medium tracking-widest text-balance uppercase sm:text-3xl"
        >
          Pardon the mess! Code is still being slung ðŸ˜Š
        </p>
      </div>
    </div>

    <LandingGsapBox
      id="gsapBoxResume"
      linkId="resume"
      classes="bg-dark-primary py-[4rem] box-content hidden"
    >
      <div class="text-center">
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          Resume
        </h1>
        <a
          href={new URL('assets/resume-2025.pdf', Astro.site)}
          target="_blank"
          class="text-secondary hover:text-secondary-light my-4 text-xl font-medium tracking-widest text-pretty uppercase underline sm:text-3xl"
        >
          Yours for the keeping!
        </a>
      </div>
    </LandingGsapBox>

    <LandingGsapBox
      id="gsapBoxAbout"
      linkId="about"
      classes="hidden"
    >
      <div class="text-center">
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          About
        </h1>
        <p
          class="text-secondary my-4 text-xl font-medium tracking-widest text-pretty uppercase sm:text-3xl"
        >
          I'm going to talk about me here
        </p>
      </div>
    </LandingGsapBox>

    <LandingGsapBox
      id="gsapBoxSkills"
      linkId="skills"
      classes="hidden"
    >
      <div class="text-center">
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          Skills
        </h1>
        <p
          class="text-secondary my-4 text-xl font-medium tracking-widest text-pretty uppercase sm:text-3xl"
        >
          I'm going to talk about what I know here
        </p>
      </div>
    </LandingGsapBox>

    <LandingGsapBox
      id="gsapBoxExperience"
      linkId="experience"
      classes="bg-dark-primary py-[4rem] box-content hidden"
    >
      <div class="text-center">
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          Experience
        </h1>
        <p
          class="text-secondary my-4 text-xl font-medium tracking-widest text-pretty uppercase sm:text-3xl"
        >
          I'm going to talk about what I've done here
        </p>
      </div>
    </LandingGsapBox>

    <LandingGsapBox
      id="gsapBoxProjects"
      linkId="projects"
      classes="bg-dark-primary py-[4rem] box-content hidden"
    >
      <div class="text-center">
        <h1
          class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
        >
          Projects
        </h1>
        <p
          class="text-secondary my-4 text-xl font-medium tracking-widest text-pretty uppercase sm:text-3xl"
        >
          I'm going to talk more about what I've done here
        </p>
      </div>
    </LandingGsapBox>

    <div class="h-[110svh]">
      <div class="absolute -z-10 h-[110svh] w-full overflow-hidden">
        <Image
          src={Space2}
          alt=""
          class="h-[140svh] w-full object-cover object-bottom"
          decoding="sync"
          loading="eager"
          data-speed="clamp(auto)"
        />
      </div>

      <LandingContact />
    </div>

    <LandingFooter />
  </GsapSmoothScroll>
</LandingLayout>

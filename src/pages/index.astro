---
import { Image } from 'astro:assets';

import LandingContact from '@components/landing/LandingContact.astro';
import LandingFooter from '@components/landing/LandingFooter.astro';
import LandingGsapBox from '@components/landing/LandingGsapBox.astro';
import LandingHero from '@components/landing/LandingHero.astro';
import LandingResume from '@components/landing/LandingResume.astro';
import GsapSmoothScroll from '@components/ui/GsapSmoothScroll.astro';
import Space1 from '@images/space/space1.jpg';
import Space4 from '@images/space/space4.jpg';
import LandingLayout from '@layouts/LandingLayout.astro';
---

<LandingLayout>
  <div id="landing-background"></div>

  <GsapSmoothScroll>
    <div
      class="absolute top-0 -z-40 h-[120svh] w-full overflow-hidden"
      data-speed="clamp(.1)"
      id="landing-space-image-wrapper"
    >
      <Image
        src={Space1}
        alt=""
        class="h-full w-full max-w-none object-cover object-bottom"
        decoding="sync"
        loading="eager"
      />
    </div>

    <LandingHero />

    <LandingResume />

    <div class="bg-dark-primary h-[50svh] overflow-hidden" id="resume-about-spacer">
      <Image
        src={Space4}
        alt=""
        class="h-screen w-full object-cover object-bottom"
        decoding="sync"
        loading="eager"
        data-speed=".6"
      />
    </div>


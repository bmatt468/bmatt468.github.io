---
import { Image } from 'astro:assets';

import LandingContact from '@components/landing/LandingContact.astro';
import LandingFooter from '@components/landing/LandingFooter.astro';
import LandingGsapBox from '@components/landing/LandingGsapBox.astro';
import LandingHero from '@components/landing/LandingHero.astro';

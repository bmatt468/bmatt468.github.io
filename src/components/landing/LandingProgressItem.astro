---
import {Icon} from "astro-icon/components";

export interface Props {
  name: string;
  link?: string;
}

const { name } = Astro.props;
---

<li
  id={'progressLink' + name}
  class="progress-link relative w-full before:absolute before:top-0 before:left-0 before:-z-10 before:h-full before:w-full before:origin-left before:scale-x-(--scaleBackground) before:bg-cyan-400 before:content-['_']"
>
  <a
    href={'#' + name.toLowerCase()}
    class="progress-link-anchor flex items-center justify-center py-2 px-1 text-sm leading-none font-medium text-gray-500 hover:text-gray-900"
  >
    <span class="hidden md:block">{name}</span>
    <Icon name="skill-icons:astro" class="text-sm block md:hidden" />
  </a>
</li>

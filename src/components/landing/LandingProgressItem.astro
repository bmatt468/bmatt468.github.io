---
import { Icon } from 'astro-icon/components';

export interface Props {
  name: string;
  icon: string;
  link?: string;
}

const { name, icon } = Astro.props;
---

<li
  id={'progressLink' + name}
  class="progress-link relative w-full before:absolute before:top-0 before:left-0 before:-z-10 before:h-full before:w-full before:origin-left before:scale-x-(--scaleBackground) before:bg-cyan-400 before:content-['_']"
>
  <a
    href={'#' + name.toLowerCase()}
    class="progress-link-anchor flex items-center justify-center px-1 py-2 text-sm leading-none font-medium text-gray-500 hover:text-gray-900"
  >
    <span class="hidden md:block">{name}</span>
    <Icon
      name={icon}
      class="block size-5 md:hidden"
    />
  </a>
</li>

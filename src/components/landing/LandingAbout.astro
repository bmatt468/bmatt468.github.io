---
import About from '@assets/icons/about.svg';
import AboutContent from '@components/landing/abouts/AboutContent.astro';
import PassionsContent from '@components/landing/abouts/PassionsContent.astro';
import LandingGsapBox from '@components/landing/LandingGsapBox.astro';
import Resume from '@images/resume.svg';
---

<LandingGsapBox
  id="gsapBoxResume"
  linkId="resume"
  classes="bg-dark-primary box-content flex-col py-16 relative min-h-[50svh]"
  minHeightScreen={false}
>
  <div class="z-10 text-center">
    <h1 class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl">
      Resume
    </h1>
    <a
      href={new URL('assets/resume-2025.pdf', Astro.site)}
      target="_blank"
      class="text-secondary hover:text-secondary-light my-4 text-xl font-medium tracking-widest text-pretty uppercase underline sm:text-3xl"
    >
      Yours for the keeping!
    </a>

    <p class="prose text-primary my-8 text-balance">
      Care for a closer look at what I've done? Grab a copy of my resume! You
      can find it at the link above, the button below, or
      <a
        href={new URL('assets/resume-2025.pdf', Astro.site)}
        target="_blank"
        class="text-primary hover:text-secondary"
        >right here</a
      >!
    </p>

    <p class="prose text-primary my-8 text-balance">
      Want to get in touch? <a
        href="#contact"
        class="text-primary hover:text-secondary gsap-scroll-anchor"
        data-gsap-target="#contact"
        >Contact me</a
      > anytime! Otherwise, feel free to scroll on and see more about what I do!
      ðŸš€
    </p>

    <a
      href={new URL('assets/resume-2025.pdf', Astro.site)}
      target="_blank"
      class="text-primary bg-tertiary hover:bg-jellybean-dark rounded-md px-2.5 py-1.5 text-sm font-semibold shadow-xs focus-visible:outline-2 focus-visible:outline-offset-2"
    >
      My Resume
    </a>
  </div>

  <div
    class="absolute top-0 bottom-0 left-1/2 z-0 aspect-3/4 h-[120%] sm:left-2/3 md:left-3/4"
    data-speed=".75"
  >
    <span><Resume class="text-dark-secondary" /></span>
  </div>
</LandingGsapBox>

<LandingGsapBox
  id="gsapBoxAbout"
  linkId="about"
  classes="py-8 max-h-[100svh]"
>
  <div
    id="about-container"
    class="grid w-full max-w-[43rem] grid-rows-[min-content_min-content] self-stretch"
  >
    <div
      id="about-titles"
      class="place-self-center text-center"
    >
      <h1
        id="about-title"
        class="text-primary text-5xl font-semibold tracking-tight sm:text-7xl"
      >
        About Me
      </h1>
      <p
        id="about-subtitle"
        class="text-secondary mt-2 text-xl font-medium tracking-widest uppercase sm:text-3xl"
      >
        And What I Do
      </p>
    </div>


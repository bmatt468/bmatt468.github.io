---
export interface Props {
  id: string;
  linkId?: string;
  classes?: string[];
}

const { id, linkId, classes, ...rest } = Astro.props;
---

{linkId && <span id={linkId} />}
<section
  class="flex min-h-screen items-center justify-center p-2"
  class:list={[classes]}
  id={id}
  {...rest}
>
  <slot />
</section>

---
export interface Props {
  id: string;
  minHeightScreen?: boolean;
  linkId?: string;
  classes?: string;
}

const { id, minHeightScreen = true, linkId, classes, ...rest } = Astro.props;
---

{linkId && <span id={linkId} />}
<section
  class:list={[
    'landing-box flex items-center justify-center overflow-hidden p-2',
    classes,
    minHeightScreen ? 'min-h-svh' : '',
  ]}
  id={id}
  {...rest}
>
  <slot />
</section>

---
import type { FooterLink } from '../../env';

import { Icon } from 'astro-icon/components';

const links: Array<FooterLink> = [
  {
    url: 'https://www.linkedin.com/in/benjaminrmatthews/',
    description: 'Benjamin Matthews LinkedIn',
    icon: 'mdi:linkedin',
    target: '_blank',
  },
  {
    url: 'https://github.com/bmatt468',
    description: 'Benjamin Matthews GitHub',
    icon: 'mdi:github',
    target: '_blank',
  },
  // {
  //   url: '/blog',
  //   description: 'Benjamin Matthews Blog',
  //   icon: 'mdi:blog',
  //   target: '_self',
  // },
  {
    url: 'https://www.highiron.co',
    description: 'High Iron',
    icon: 'mdi:external-link',
    target: '_blank',
  },
];
---

<footer
  class="landing-footer flex flex-col items-center justify-center gap-4 p-8 md:flex-row md:p-4"
>
  <aside class="flex flex-auto items-center gap-x-2">
    <a href="#">
      <Icon
        name="logos/logo"
        class="size-14 md:size-10"
      />
    </a>
    <p class="hidden text-sm leading-none md:block">
      Copyright &copy; {new Date().getFullYear()} Benjamin R. Matthews - All rights
      reserved
    </p>
  </aside>

  <nav class="flex items-center justify-center gap-2 md:justify-end">
    {
      links.map((link) => (
        <a
          href={link.url}
          target={link.target}
        >
          <span class="sr-only">{link.description}</span>
          <Icon
            class="size-8"
            name={link.icon}
          />
        </a>
      ))
    }
  </nav>
  <p class="flex-auto text-center text-xs text-pretty md:hidden">
    Copyright &copy; {new Date().getFullYear()} Benjamin R. Matthews<br />
    All rights reserved
  </p>
</footer>

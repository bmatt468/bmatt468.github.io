---
import type { FooterLink } from '../../env';

import { Icon } from 'astro-icon/components';

const links: Array<FooterLink> = [
  {
    url: 'https://www.linkedin.com/in/benjaminrmatthews/',
    description: 'Benjamin Matthews LinkedIn',
    icon: 'mdi:linkedin',
    target: '_blank',
  },
  {
    url: 'https://github.com/bmatt468',
    description: 'Benjamin Matthews GitHub',
    icon: 'mdi:github',
    target: '_blank',
  },
  // {
  //   url: '/blog',
  //   description: 'Benjamin Matthews Blog',
  //   icon: 'mdi:blog',
  //   target: '_self',
  // },
  {
    url: 'https://www.highiron.co',
    description: 'High Iron',
    icon: 'mdi:external-link',
    target: '_blank',
  },
];
---

<footer class="bg-white dark:bg-neutral-800">
  <div
    class="mx-auto max-w-7xl px-6 py-10 md:flex md:items-center md:justify-between lg:px-8"
  >
    <div class="flex justify-center gap-x-6 md:order-2">
      {
        links.map((link) => (
          <a
            href={link.url}
            target={link.target}
            class="text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-300"
          >
            <span class="sr-only">{link.description}</span>
            <Icon
              class="size-6"
              name={link.icon}
            />
          </a>
        ))
      }
    </div>
    <p
      class="mt-8 text-center text-sm/6 text-gray-600 md:order-1 md:mt-0 dark:text-gray-400"
    >
      &copy; {new Date().getFullYear()} Benjamin R. Matthews - All rights reserved
    </p>
  </div>
</footer>

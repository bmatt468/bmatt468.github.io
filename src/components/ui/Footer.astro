---
import type { FooterLink } from '../../types';

import { Icon } from 'astro-icon/components';

import HeroImage from '../landing/HeroImage.astro';

// TODO: make this
const links: Array<FooterLink> = [
  {
    url: 'https://www.linkedin.com/in/benjaminrmatthews/',
    description: 'Benjamin Matthews LinkedIn',
    icon: 'fa6-brands:linkedin-in',
    target: '_blank',
  },
  {
    url: 'https://github.com/bmatt468',
    description: 'Benjamin Matthews GitHub',
    icon: 'fa6-brands:github',
    target: '_blank',
  },
  {
    url: '#',
    description: 'Benjamin Matthews Blog',
    icon: 'carbon:blog',
    target: '_self',
  },
  {
    url: 'https://www.highiron.co',
    description: 'High Iron',
    icon: 'carbon:network-enterprise',
    target: '_blank',
  },
];
---

<footer class="relative flex h-64 flex-col items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
            target={link.target}
          >
            <span class="sr-only">{link.description}</span>
            <Icon
              class="size-full"
              name={link.icon}
            />
          </a>
        </li>
      ))
    }
  </ul>
  <div class="mt-8 text-center text-xs">
    &copy;{new Date().getFullYear()} Benjamin R. Matthews. All rights reserved.
  </div>
</footer>
